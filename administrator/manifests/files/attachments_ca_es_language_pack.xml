    <!-- Attachments plugin language files -->
    <files folder="attachments_plugin" target="plugins/content/attachments/language/ca-ES">
      <filename>index.html</filename>
      <filename>ca-ES.plg_content_attachments.ini</filename>
      <filename>ca-ES.plg_content_attachments.sys.ini</filename>
    </files>

