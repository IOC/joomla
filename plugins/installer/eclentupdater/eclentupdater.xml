  <authorEmail>giuseppe.palmas@gmail.com</authorEmail>
  <authorUrl>https://www.eclent.com</authorUrl>
  <copyright>Copyright (c) 2020 eclent. All rights reserved.</copyright>
  <license>GNU General Public License version 2 or later.</license>
  <version>1.2</version>
  <description>PLG_ECLENT_UPDATER_DESCRIPTION</description>
  <files>
    <filename plugin="eclentupdater">eclentupdater.php</filename>
    <filename>index.html</filename>
    <folder>language</folder>
  </files>
  <updateservers>
    <server type="extension" name="eclent - Updater" priority="1">https://www.eclent.com/download/eclent_updater/plg_installer_eclentupdater.xml</server>
	</updateservers>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field
          name="download_id"
          type="text"
          label="Download ID"
          description="PLG_ECLENT_UPDATER_DOWNLOAD_ID_DESCRIPTION"
          default=""
          required="true"
          filter="string"
          size="50"
        />
      </fieldset>
    </fields>
  </config>
</extension>
